rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Default deny all
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // Restaurant dish images - NEW ENHANCED MODEL
    match /restaurants/{restaurantId}/dishes/{dishId}/{imageFile} {
      // Allow reads for authenticated users (can be made public if needed)
      allow read: if request.auth != null;
      
      // Allow writes only for restaurant members
      allow write: if request.auth != null 
                   && isRestaurantMember(restaurantId)
                   && validateImageUpload();
    }

    // Restaurant profile images
    match /restaurants/{restaurantId}/profile/{imageFile} {
      allow read: if request.auth != null;
      allow write: if request.auth != null 
                   && isRestaurantMember(restaurantId)
                   && validateImageUpload();
    }

    // User profile images
    match /users/{userId}/profile/{imageFile} {
      allow read: if request.auth != null;
      allow write: if request.auth != null 
                   && request.auth.uid == userId
                   && validateImageUpload();
    }

    // Helper functions
    function isRestaurantMember(restaurantId) {
      return request.auth.token.restaurantIds != null 
             && request.auth.token.restaurantIds.hasAny([restaurantId]);
    }

    function validateImageUpload() {
      return request.resource != null
             && request.resource.size < 10 * 1024 * 1024  // 10MB limit
             && request.resource.contentType != null
             && request.resource.contentType.matches('image/.*');
    }
  }
}
