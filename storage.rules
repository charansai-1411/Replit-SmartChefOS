rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Default: deny all
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // Restaurant logos - only admins can write
    match /restaurants/{restaurantId}/logo.{ext} {
      allow read: if request.auth != null && request.auth.token.restaurantId == restaurantId;
      allow write: if request.auth != null 
                   && request.auth.token.restaurantId == restaurantId 
                   && request.auth.token.role == 'admin'
                   && request.resource.size < 5 * 1024 * 1024 // 5MB limit
                   && request.resource.contentType.matches('image/.*');
    }

    // Menu item images
    match /restaurants/{restaurantId}/menu/{itemId}.{ext} {
      allow read: if request.auth != null && request.auth.token.restaurantId == restaurantId;
      allow write: if request.auth != null 
                   && request.auth.token.restaurantId == restaurantId 
                   && (request.auth.token.role == 'admin' || request.auth.token.role == 'manager')
                   && request.resource.size < 5 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }
  }
}
